{
  "name": "wp-plugin-template",
  "version": "1.0.0",
  "description": "Initial setup for wordpress plugin",
  "main": "index.js",
  "repository": "https://github.com/aguiarrdev/wp-plugin-template",
  "author": "Code Bakery",
  "license": "GPL-3.0",
  "devDependencies": {
    "node-sass": "^7.0.1",
    "parcel-bundler": "^1.12.5",
    "sass": "^1.42.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "autoprefixer": "^9.6.5",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^1.4.1",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2"
  },
  "scripts": {
    "build": "parcel build ./resources/scripts/**/pages/**/*.ts ./resources/styles/**/index.scss .images/* --public-url ./",
    "dev": "parcel watch ./resources/* --public-url ./",
    "i18n:textdomain": "wpi18n addtextdomain --exclude=dist,node_modules,resources,tests,vendor",
    "i18n:pot": "wpi18n makepot --exclude=dist,node_modules,resources,tests,vendor"
  }
}
